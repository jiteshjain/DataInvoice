@{
    Layout = null;

    string headnavclass = "header md-header minimized dark";

    string actionName = this.Context.Request.RequestContext.RouteData.Values["action"].ToString();
    string controllerName = this.Context.Request.RequestContext.RouteData.Values["controller"].ToString();

    if (controllerName.Equals("Home", StringComparison.InvariantCultureIgnoreCase) && actionName.Equals("INdex", StringComparison.InvariantCultureIgnoreCase))
    {
        headnavclass = "header bg-header transparent-dark";
    }


}




<!-- BEGIN HEADER -->
<nav class="@headnavclass" data-pages="header" data-pages-header="autoresize" data-pages-resize-class="dark">
    <div class="container relative">
        <div class="pull-left">
            <div class="header-inner">
                <a href="@Url.Action("Index","Home")">
                    <img src="/Content/datainvoice.png" width="152" height="21" data-src-retina="/Content/datainvoice.png" class="logo" alt="">
                    <img src="/Content/datainvoice_blanc.png" width="152" height="21" data-src-retina="/Content/datainvoice_blanc.png" class="alt" alt="">
                </a>
            </div>
        </div>
        <div class="pull-right">
            <div class="header-inner">
                <a href="#" class="search-toggle visible-sm-inline visible-xs-inline p-r-10" data-toggle="search"><i class="fs-14 pg-search"></i></a>
                <div class="visible-sm-inline visible-xs-inline menu-toggler pull-right p-l-10" data-pages="header-toggle" data-pages-element="#header">
                    <div class="one"></div>
                    <div class="two"></div>
                    <div class="three"></div>
                </div>
            </div>
        </div>
        <!-- END HEADER TOGGLE FOR MOBILE & TABLET -->
        <!-- BEGIN RIGHT CONTENT -->
        <div class="menu-content mobile-dark pull-right clearfix" data-pages-direction="slideRight" id="header">
            <!-- BEGIN HEADER CLOSE TOGGLE FOR MOBILE -->
            <div class="pull-right">
                <a href="#" class="padding-10 visible-xs-inline visible-sm-inline pull-right m-t-10 m-b-10 m-r-10" data-pages="header-toggle" data-pages-element="#header">
                    <i class=" pg-close_line"></i>
                </a>
            </div>
            <!-- END HEADER CLOSE TOGGLE FOR MOBILE -->
            <!-- BEGIN MENU ITEMS -->
            <div class="header-inner">
                <ul class="menu">
                    <li>
                        <a href="@Url.Action("Index","Home")" class="active"><i class="fa fa-home"></i> </a>
                    </li>
                    <li class="classic">
                        <!--<a href="@Url.Action("Solutions","Home")" class="active">Fonctionnalités</a>-->
                    </li>
                    <li>
                        <a href="@Url.Action("Pricing", "Home")" class="active">Tarifs </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "DirectInvoice")" class="active">Créer une Facture </a>
                    </li>
                    <li>
                        <a href="/manager" class="active">Se connecter </a>
                    </li>
                </ul>
                <!-- BEGIN COPYRIGHT FOR MOBILE -->
                <div class="font-arial m-l-35 m-r-35 m-b-20 visible-sm visible-xs m-t-20">
                    <p class="fs-11 small-text muted">Copyright &copy; 2016 DataInvoice</p>
                </div>
                <!-- END COPYRIGHT FOR MOBILE -->
            </div>
            <!-- END MENU ITEMS -->
        </div>
    </div>
</nav>
<!-- END HEADER -->

