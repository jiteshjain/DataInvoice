@model DataInvoice.SOLUTIONS.GENERAL.STORE.FORM.StoreCloudItemForm
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Editer fichier</h4>
</div>
@using (Ajax.BeginForm("ValiderEditerFichier", "CloudStore", FormMethod.Post,
                                new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "POST",
                                    UpdateTargetId = "list-of-people"
                                }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="modal-body">

        @*<div>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Editer fichier</h3>
            </div>*@
        <div class="form-group">
            <label class="upper" for="LabelFile">Nom</label>
            <input class="form-control" name="NameFile" type="text" value="@Model.NameFile" required>
        </div>

        <div class="form-group">
            <label class="upper" for="NameFile">Libellé</label>
            <input class="form-control" name="LabelFile" type="text" value="@Model.LabelFile">
        </div>

        <input type="hidden" name="IDItem" value="@Model.IDItem">

    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Enregistrer</button>
    </div>
}
