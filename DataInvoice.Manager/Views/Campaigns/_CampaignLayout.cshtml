@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string actionName = ViewContext.Controller.ControllerContext.RouteData.Values["action"].ToString();
    DataInvoice.SOLUTIONS.INVOICES.CAMPAIGN.Campaign campaign = this.ViewBag.campaign;

}

@section headscripts
{
   
}
@section footscripts
{
<script src="//static.datainvoice.com/plugins/jquery.sparkline.min.js" type="text/javascript"></script>
<script >
    $("#sparkline_bar5").sparkline([8,9,10,11,10,10,12,10,10,11,9,12,11,10,9,11,13,13,12],{type:"bar",width:"100",barwidth:5,height:"25",barcolor:"#35aa47",negbarcolor:"#e02222"});
</script>
}



<div class="row">


    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat2 ">
            <div class="display">
                <div class="number">
                    <h3 class="font-green-sharp">
                        <span data-counter="counterup" data-value="7800">48680</span>
                        <small class="font-green-sharp">€</small>
                    </h3>
                    <small>Facturé en Novembre</small>
                </div>
                <div class="icon">
                    <i class="icon-pie-chart"></i>
                </div>
            </div>
            <div class="sparkline-chart" style="margin-bottom: -15px;">
                <div class="number" id="sparkline_bar5" style="margin-bottom: 0px;">
                    <canvas style="display: inline-block; width: 113px; height:20px; vertical-align: top;"></canvas>
                </div>
            </div>

        </div>
    </div>




    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat2 bordered">
            <div class="display">
                <div class="number">
                    <h3 class="font-red-haze">
                        <span data-counter="counterup" data-value="1349">7800 €</span>
                    </h3>
                    <small>En attente de paiement</small>
                </div>
                <div class="icon">
                    <i class="icon-like"></i>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress">
                    <span style="width: 85%;" class="progress-bar progress-bar-success red-haze">
                        <span class="sr-only">85% change</span>
                    </span>
                </div>
                <div class="status">
                    <div class="status-title"> % d'impayés </div>
                    <div class="status-number"> 85% </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat2 bordered">
            <div class="display">
                <div class="number">
                    <h3 class="font-blue-sharp">
                        <span data-counter="counterup" data-value="567">567</span>
                    </h3>
                    <small>NEW ORDERS</small>
                </div>
                <div class="icon">
                    <i class="icon-basket"></i>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress">
                    <span style="width: 45%;" class="progress-bar progress-bar-success blue-sharp">
                        <span class="sr-only">45% grow</span>
                    </span>
                </div>
                <div class="status">
                    <div class="status-title"> grow </div>
                    <div class="status-number"> 45% </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 red" href="#">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="12,5">12,5</span>M$
                </div>
                <div class="desc"> Total Profit </div>
            </div>
        </a>
    </div>
</div>











<ul class="nav nav-tabs" style="margin-bottom:0px;">
    <li class="@NGLib.COMPONENTS.WEB.Tools.sayactive("Campaign",actionName)">
        <a href="@Url.Action("Campaign", "Campaigns", new { IDCampaign = campaign.IDCampaign })"> <i class="fa fa-eye"></i> Aperçus </a>
    </li>
    <li class="@NGLib.COMPONENTS.WEB.Tools.sayactive("Config", actionName, true)">
        <a href="@Url.Action("Config", "Campaigns", new { IDCampaign = campaign.IDCampaign })"> <i class="fa fa-cog"></i> Configuration </a>
    </li>
    <li class="@NGLib.COMPONENTS.WEB.Tools.sayactive("DefaultConfig", actionName, true)">
        <a href="@Url.Action("DefaultConfig", "Campaigns", new { IDCampaign = campaign.IDCampaign })"> <i class="fa fa-cog"></i> Champs par default </a>
    </li>
    <li class="@NGLib.COMPONENTS.WEB.Tools.sayactive("DefaultConfig", actionName, true)">
        <a href="@Url.Action("Index", "CloudStore", new { IDCampaign = campaign.IDCampaign })"> <i class="fa fa-cog"></i> Gestion de Documents </a>
    </li>
</ul>




@RenderBody()



